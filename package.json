{
  "name": "@yioio/ts-fun",
  "version": "1.0.2",
  "description": "Using typescript to write PHP functions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha  --reporter spec -r ts-node/register ./tests/**/*.test.ts",
    "precommit": "npm run eslint && lint-staged",
    "eslint": "eslint --ext .tsx,.ts --fix ./src",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "format": "eslint --fix 'src/**/*.{js,ts,tsx}'"
  },
  "keywords": [
    "php"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/should": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "should": "^13.2.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "dependencies": {
    "@types/node": "^12.6.8",
    "babel-eslint": "^10.0.2",
    "eslint-plugin-jsx-control-statements": "^2.2.1",
    "eslint-plugin-react": "^7.14.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
